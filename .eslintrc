{
  "plugins": ["wdio"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@babel/eslint-parser"
  },
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "prettier",
    "eslint:recommended",
    "plugin:wdio/recommended"
  ],
  "root": true,
  "rules": {
    "eqeqeq": "error",
    "wdio/no-pause":0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "vueIndentScriptAndStyle": true
      }
    ]
  }
}